<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
 <!-- include your toolbar layout-->
 <include layout="@layout/toolbar" />
 <!-- Let's add fragment -->

 <LinearLayout
     android:id="@+id/frame"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:weightSum="20">

     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         tools:context=".SampleCarouselViewActivity"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="6">

         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content">
             <android.support.v4.view.ViewPager
                 android:id="@+id/pager1"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_alignParentTop="true" />
             <me.relex.circleindicator.CircleIndicator
                 android:id="@+id/indicator"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_alignParentBottom="true"/>
         </RelativeLayout>

     </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight=".5"/>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="5">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="2"
              android:orientation="vertical">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_weight=".9"
                  android:background="@drawable/notification_bg">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:weightSum="10"
                      android:orientation="horizontal">

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1">

                          <ImageView
                              android:layout_width="35dp"
                              android:layout_height="35dp"
                              android:src="@drawable/img1"/>

                      </RelativeLayout>

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="4">

                          <TextView
                              android:id="@+id/textView"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Jhon Doe"
                              android:textSize="8sp"
                              android:textAlignment="center"/>

                          <TextView
                              android:id="@+id/textView2"
                              android:layout_below="@+id/textView"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="jhon.doe@gmail.com"
                              android:textSize="8sp"
                              android:textAlignment="center"/>

                          <TextView
                              android:id="@+id/textView7"
                              android:layout_below="@+id/textView2"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Sent you a request - 1 hour ago"
                              android:textSize="6sp"
                              android:textAlignment="center"/>

                      </RelativeLayout>

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="2"/>

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="2">

                          <ImageView
                              android:layout_width="20dp"
                              android:layout_height="20dp"
                              android:layout_marginTop="5dp"
                              android:clickable="true"
                              android:src="@drawable/delete"/>

                          <View
                              android:id="@+id/view"
                              android:layout_toEndOf="@+id/editText"
                              android:layout_width="1dp"
                              android:layout_marginLeft="28dp"
                              android:layout_marginTop="5dp"
                              android:layout_height="30dp"
                              android:background="#000000" />


                          <ImageView
                              android:layout_width="20dp"
                              android:layout_height="20dp"
                              android:layout_marginTop="5dp"
                              android:layout_toEndOf="@+id/view"
                              android:layout_marginLeft="7dp"
                              android:clickable="true"
                              android:src="@drawable/accept"/>

                      </RelativeLayout>


                  </LinearLayout>

              </RelativeLayout>

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_weight="1"
                  android:background="@drawable/notification_bg">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:weightSum="10"
                      android:orientation="horizontal">

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1">

                          <ImageView
                              android:layout_width="35dp"
                              android:layout_height="35dp"
                              android:src="@drawable/img2"/>

                      </RelativeLayout>

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="4">

                          <TextView
                              android:id="@+id/textView8"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Jhon Doe1"
                              android:textSize="8sp"
                              android:textAlignment="center"/>

                          <TextView
                              android:id="@+id/textView9"
                              android:layout_below="@+id/textView8"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Has left from home"
                              android:textSize="8sp"
                              android:textAlignment="center"/>

                          <TextView
                              android:id="@+id/textView10"
                              android:layout_below="@+id/textView9"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Home fence - 3 hour ago"
                              android:textSize="6sp"
                              android:textAlignment="center"/>

                      </RelativeLayout>

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="2"/>

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="2">

                          <ImageView
                              android:layout_width="20dp"
                              android:layout_height="20dp"
                              android:layout_marginTop="5dp"
                              android:clickable="true"
                              android:src="@drawable/gps"/>

                          <View
                              android:id="@+id/view1"
                              android:layout_toEndOf="@+id/editText"
                              android:layout_width="1dp"
                              android:layout_marginLeft="28dp"
                              android:layout_marginTop="5dp"
                              android:layout_height="30dp"
                              android:background="#000000" />


                          <ImageView
                              android:layout_width="20dp"
                              android:layout_height="20dp"
                              android:layout_marginTop="5dp"
                              android:layout_toEndOf="@+id/view1"
                              android:layout_marginLeft="7dp"
                              android:clickable="true"
                              android:src="@drawable/phone"/>

                      </RelativeLayout>


                  </LinearLayout>


              </RelativeLayout>

          </LinearLayout>

     </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="3.5">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal"
             android:weightSum="11">

             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"/>

             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="2">

                 <View android:layout_width="90dp"
                     android:layout_height="60dp"
                     android:layout_centerHorizontal="true"
                     android:layout_centerVertical="true"
                     android:background="@drawable/circle"/>

            <RelativeLayout
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_centerHorizontal="true"
                     android:layout_centerVertical="true"
                     android:background="@drawable/fence_icon"/>

             </RelativeLayout>

             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="2"/>

             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="2">

                 <View android:layout_width="90dp"
                     android:layout_height="60dp"
                     android:layout_centerHorizontal="true"
                     android:layout_centerVertical="true"
                     android:background="@drawable/circle"
                     android:id="@+id/view3" />

                 <RelativeLayout
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_centerHorizontal="true"
                     android:layout_centerInParent="true"
                     android:background="@drawable/notification_icon" />

             </RelativeLayout>

             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1.5"/>

             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="2">

                 <View android:layout_width="90dp"
                     android:layout_height="60dp"
                     android:layout_centerHorizontal="true"
                     android:layout_centerVertical="true"
                     android:background="@drawable/circle"/>

                 <RelativeLayout
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_centerHorizontal="true"
                     android:layout_centerVertical="true"
                     android:background="@drawable/device_icon"/>

             </RelativeLayout>

         </LinearLayout>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#00405D">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:orientation="horizontal"
                android:background="#00405D">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/add_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/add_icon"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/add_image"
                        android:text="Add Member"
                        android:textSize="8sp"
                        android:textAlignment="center"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/member_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img1"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/member_image"
                        android:text="Member 1"
                        android:textSize="8sp"
                        android:textAlignment="center"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/member_image1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img2"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/member_image1"
                        android:text="Member 2"
                        android:textSize="8sp"
                        android:textAlignment="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/member_image3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img1"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/member_image3"
                        android:text="Member 3"
                        android:textSize="8sp"
                        android:textAlignment="center"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/member_image4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img1"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/member_image4"
                        android:text="Member 3"
                        android:textSize="8sp"
                        android:textAlignment="center"/>

                </RelativeLayout>

               </LinearLayout>

         </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1.9">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:weightSum="10"
             android:orientation="horizontal"
             android:background="#002333">

             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="2">

                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:layout_centerVertical="true"
                     android:background="@drawable/search_icon"/>

             </RelativeLayout>

             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="8">


                 <EditText
                     android:id="@+id/editText5"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_alignParentStart="true"
                     android:layout_alignParentTop="true"
                     android:ems="10"
                     android:inputType="textPersonName"
                     android:textColor="#ffffff"
                     android:text="Search"
                     android:textSize="12sp"/>
             </RelativeLayout>


         </LinearLayout>


     </RelativeLayout>

 </LinearLayout>

</LinearLayout>

